#! /bin/bash

#rm *.class
#rm view/*.class
#rm model/*.class
#rm control/*.class

echo ""
echo "DELETING OLD CLASS FILES"

rm -f *.class 
rm -rf */*.class

echo ""
jversion="$(javac --version)"
echo "COMPILING APP: ${jversion}"
javac Main.java

echo ""
echo "RUNING APP"
java Main

echo ""
echo "DELETING CLASS FILES"
rm -f *.class 
rm -rf */*.class

echo ""
echo "DONE"
echo ""
